<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
    />
    <title>Lista de Pedidos</title>
  </head>
  <body>
    <div class="container">
      <h1>Lista de Pedidos</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">CÃ³d</th>
            <th scope="col" class="text-center">Cliente</th>
            <th scope="col" class="text-center">Pizza</th>
            <th scope="col" class="text-center">Quant</th>
          </tr>
        </thead>
        <tbody>
          <% pedidos.forEach(ped => { %>
          <tr>
            <th scope="row"><%=ped.id%></th>
            <td class="text-center"><%=ped.cliente%></td>
            <td class="text-center"><%=ped.pizza%></td>
            <td class="text-center"><%=ped.quantidade%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
